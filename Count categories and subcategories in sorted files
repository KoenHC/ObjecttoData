#Count categories and subcategories

grep -i --count 'art histor* art_history_sorted.json
grep -i -w --count 'history of art' art_history_sorted.json
grep -i -w --count 'art and archaeology' art_history_sorted.json

grep -i -w --count 'classics' classics_sorted.json
grep -i -w --count 'classical' classics_sorted.json
grep -i --count 'classics*' classics_sorted.json
grep -i -w --count 'ancient greek' classics_sorted.json
grep -i -w --count 'latin' classics_sorted.json

grep -i --count 'histor*' history_sorted.json
grep -i -w --count 'antiquity' history_sorted.json
grep -i -w --count 'middle ages' history_sorted.json
grep -i -w --count 'early modern' history_sorted.json

grep -i --count 'language*' language_sorted.json
grep -i --count 'linguistic*' language_sorted.json
grep -i -w --count 'grammar' language_sorted.json

grep -i -w --count 'literature' literature_sorted.json
grep -i -w --count 'comparative literature' literature_sorted.json
grep -i -w --count 'book studies' literature_sorted.json
grep -i -w --count 'literary' literature_sorted.json
grep -i -w --count 'poetry' literature_sorted.json
grep -i -w --count 'prose' literature_sorted.json

