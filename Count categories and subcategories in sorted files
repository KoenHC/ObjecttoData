grep -i -w --count 'ethics' philosophy_sorted.json
grep -i -w --count 'epistemology' philosophy_sorted.json
grep -i -w --count 'metaphysics' philosophy_sorted.json

grep -i -w --count 'religion' religion_sorted.json
grep -i -w --count 'religious' religion_sorted.json
